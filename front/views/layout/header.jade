header.header
    #main-nav.navbar.navbar-inverse.bs-docs-nav.fixed(role='banner', ng-controller='authController')
        .container
            .navbar-header.responsive-logo
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.bs-navbar-collapse')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='http://beertoobeer.com/#/')
                    img.imageLogo(src='images/logo.png', alt='BeerTooBeer')
            nav.navbar-collapse.bs-navbar-collapse.collapse(role='navigation', style='height: 1px;')
                ul.nav.navbar-nav.navbar-right.responsive-nav.main-nav-list
                    li.current
                        a(ng-click="gotoAnchor('home')") {{ 'MENU_TITLE_1' | translate }}
                    li.hidden-xs.hidden-sm
                        a(ng-click="gotoAnchor('focus')") {{ 'MENU_TITLE_2' | translate }}
                    li
                        a(ng-click="gotoAnchor('searchBeer')") {{ 'MENU_TITLE_3' | translate }}
                    li.hidden-xs.hidden-sm
                        a(ng-click="gotoAnchor('team')") {{ 'MENU_TITLE_4' | translate }}
                    li(ng-cloak)
                        a(ng-click='login()' ng-hide="currentUser") {{ 'MENU_TITLE_5' | translate }}
                        span.dropdown(dropdown='', on-toggle='toggled(open)')
                            a.dropdown-toggle#linkToConnect(href='', dropdown-toggle='')
                                | {{currentUser.pseudo}}
                            ul.dropdown-menu#menu
                                li
                                    a(ng-click="gotoEditBar()",ng-show="currentUser.role==='ADMIN'") {{ 'MENU_TITLE_8' | translate }}

                                li
                                    a(ng-click="goEditUsers()",ng-show="currentUser.role==='ADMIN'") {{ 'MENU_TITLE_9' | translate }}
                                li.divider
                                li
                                    a(ng-click="gotoAddBeer()") {{ 'MENU_TITLE_6' | translate }}
                                li
                                    a(ng-click="exit()") {{ 'MENU_TITLE_7' | translate }}


script(type="text/ng-template", id="login")
    div(ng-controller='authController')
      div(ng-show="showSignup")
          form.form-signin(ng-submit="submit(form)")
            h2.form-signin-heading {{ 'LOGIN_TITRE' | translate }}
            div.form-group
                p.help-block(ng-show="errors.email") {{ errors.email }}
                label {{ 'LOGIN_EMAIL' | translate }}
                input.form-control(type="email", id="email", name="email",placeholder="Enter email ...",value="",ng-model="user.email",required)
              div.form-group
                p.help-block(ng-show="errors.password") {{ errors.password }}
                label {{ 'LOGIN_PASSWORD' | translate }}
                input.form-control(type="password", id="password", name="password",placeholder="Enter password ...",value="",ng-model="user.password",required)
            button.btn.btn-lg.btn-primary.btn-block.btnLogin(id="signin",type="submit") {{ 'LOGIN_BTN' | translate }}
            a.signUp(ng-click='signup()') {{ 'LOGIN_SIGNUP' | translate }}
          hr.hrLogin
          .extra
            h2.form-signin-heading {{ 'LOGIN_LOG_WITH' | translate }}
            .buttons.sso
              a(href="/api/auth/google/", class="sso-button google") Google
      div(ng-hide="showSignup")
          form.form-signin(ng-submit="register(form)")
            h2.form-signin-heading {{ 'LOGIN_SIGNUP' | translate }}
            h4.error {{message}}
            div.form-group
                label {{ 'LOGIN_SIGNUP_PSEUDO' | translate }}
                input.form-control(type="text", id="pseudo", name="pseudo",placeholder="Enter pseudo ...",value="",ng-model="user.pseudo",required)
            div.form-group
                    label {{ 'LOGIN_SIGNUP_EMAIL' | translate }}
                    input.form-control(type="email", id="email", name="email",placeholder="Enter email ...",value="",ng-model="user.email",required)
            div.form-group
                label {{ 'LOGIN_SIGNUP_PASS' | translate }}
                input.form-control(type="password", id="password", name="password",placeholder="Enter password ",value="",ng-model="user.password",required)
            button.btn.btn-lg.btn-primary.btn-block.btnLogin(id="signup",type="submit") {{ 'LOGIN_SIGNUP_CREATE' | translate }}
            a.signUp(ng-click='signup()') {{ 'LOGIN_BACK' | translate }}
